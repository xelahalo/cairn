            "cargo": {
                "args": [
                    "build",
                    "--bin=fsatrace",
                    "--package=fsatrace"
                ],
                "filter": {
                    "name": "fsatrace",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
